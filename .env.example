# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/cotizate_db?schema=public

# Auth - JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
SESSION_EXPIRES_IN=24h

# Auth - Security
BCRYPT_ROUNDS=12
PASSWORD_HISTORY_LIMIT=5
ENCRYPTION_KEY=your-32-character-encryption-key

# Email
EMAIL_FROM=noreply@example.com
EMAIL_PROVIDER=inbucket # Options: console, inbucket, smtp, sendgrid, ses

# Email - Inbucket (Development)
SMTP_HOST=localhost
SMTP_PORT=2500
SMTP_SECURE=false

# Email - SMTP (Production - uncomment when needed)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Frontend
FRONTEND_URL=http://localhost:3000

# API
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_EXPIRES_IN=24h
SESSION_CLEANUP_INTERVAL=1h